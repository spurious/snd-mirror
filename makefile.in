srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
INSTALL = @INSTALL@
DEFS = @DEFS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

GUILE_LIBS = @GUILE_LIBS@
GUILE_CFLAGS = @GUILE_CFLAGS@
GTK_CFLAGS = @GTK_CFLAGS@
GTK_LIBS = @GTK_LIBS@
GUILE_GTK_LIBS = @GUILE_GTK_LIBS@
MOTIF_LIBS = @XLIBS@
MOTIF_FLAGS = @XFLAGS@
AUDIO_LIB = @AUDIO_LIB@
XMHTML_LIB = @XMHTML_LIB@
GTKHTML_LIB = @GTKHTML_LIB@
GDBM_LIB = @GDBM_LIB@
GSL_LIBS = @GSL_LIBS@
GSL_FLAGS = @GSL_FLAGS@
GTKEXTRA_LIBS = @GTKEXTRA_LIBS@
GTKEXTRA_FLAGS = @GTKEXTRA_FLAGS@

GX_HEADERS = $(@GX_HEADERS@)
GX_FILES = $(@GX_FILES@)

.c.o:
	$(CC) -c $(DEFS) $(CFLAGS) $(GUILE_CFLAGS) $(MOTIF_FLAGS) $(GTK_CFLAGS) $(GSL_FLAGS) $(GTKEXTRA_FLAGS) $<

include makesnd.files

main_target: @MAKE_TARGET@

snd: $(SNDLIB_HEADERS) $(SNDLIB_SCM_HEADERS) $(SND_HEADERS) $(GX_HEADERS) $(SNDLIB_O_FILES) $(SNDLIB_SCM_FILES) $(O_FILES) $(GX_FILES)
	$(CC) $(LDFLAGS) $(CFLAGS) $(SNDLIB_O_FILES) $(SNDLIB_SCM_FILES) $(O_FILES) $(GX_FILES) -o snd $(GUILE_LIBS) $(GTK_LIBS) $(GUILE_GTK_LIBS) $(MOTIF_LIBS) $(AUDIO_LIB) $(GDBM_LIB) $(GSL_LIBS) $(GTKEXTRA_LIBS) $(XMHTML_LIB) $(GTKHTML_LIB) $(LIBS)

widget: snd_widget.o

snd_widget.o: $(SNDLIB_HEADERS) $(SNDLIB_SCM_HEADERS) $(SND_HEADERS) $(GX_HEADERS) $(SNDLIB_O_FILES) $(SNDLIB_SCM_FILES) $(O_FILES) $(GX_FILES)
	$(LD) -r $(LDFLAGS) $(CFLAGS) $(SNDLIB_O_FILES) $(SNDLIB_SCM_FILES) $(O_FILES) $(GX_FILES) -o snd_widget.o

include makesnd.back

Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./config.status --recheck

configure: configure.in
	cd $(srcdir); autoconf

