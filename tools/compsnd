echo ' '
echo ' -------------------------------------------------------------------------------- '
echo ' -----                --with-no-gui --with-oss                              ----  '
echo ' -------------------------------------------------------------------------------- '
./configure --quiet LDFLAGS="-L/usr/X11R6/lib" CFLAGS="-Wall -I/usr/X11R6/include" --with-no-gui --with-oss
make
echo ' '
echo ' '
