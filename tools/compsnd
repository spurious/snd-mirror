# echo '(let ((hxm (dlopen (string-append (getcwd) "/xm.so")))) (dlinit hxm "Init_libxm") (display XmARROWS_END) (exit))' > tmp.scm
# ./snd tmp.scm
# rm tmp.scm

echo ' -------------------------------- no strftime -------------------------------- '

