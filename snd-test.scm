	 (env1 (channel-amp-envs snd chn pos1))
	 (len1 (and env1 (list? env1) (= (length env1) 2) (vector-length (cadr env1)))))
    (call-with-current-continuation
     (lambda (break)
       (if (and len0 len1)
	   (let* ((minlen (min len0 len1))
		  (inc0 (/ len0 minlen))
		  (inc1 (/ len1 minlen))
		  (e0 (cadr env0))
		  (e1 (cadr env1)))
	     (if (and (exact? inc0)
		      (exact? inc1))
		 (do ((i 0 (1+ i)))
		     ((= i minlen))
		   (let ((max0 -1.0)
			 (max1 -1.0))
		     (if (= inc0 1)
			 (set! max0 (vector-ref e0 i))
			 (do ((j 0 (1+ j)))
			     ((= j inc0))
			   (if (> (vector-ref e0 (+ j (* inc0 i))) max0)
			       (set! max0 (vector-ref e0 (+ j (* inc0 i)))))))
		     (if (= inc1 1)
