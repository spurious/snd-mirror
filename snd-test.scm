			 (do ((j 0 (1+ j)))
			     ((= j inc1))
			   (if (> (vector-ref e1 (+ j (* inc1 i))) max1)
			       (set! max1 (vector-ref e1 (+ j (* inc1 i)))))))
		     (if (> (abs (- max0 max1)) df)
			 (begin
