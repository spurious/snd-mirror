(define fneq (lambda (a b) (> (abs (- a b)) .001)))
(define ffneq (lambda (a b) (> (abs (- a b)) .01)))
(define fffneq (lambda (a b) (> (abs (- a b)) .1)))
(define feql
  (lambda (a b)
    (if (null? a)
	(null? b)
	(if (null? b)
	    #f
	    (if (fneq (car a) (car b))
		#f
		(feql (cdr a) (cdr b)))))))
(define ffeql
  (lambda (a b)
    (if (null? a)
	(null? b)
	(if (null? b)
	    #f
	    (if (fffneq (car a) (car b))
		#f
		(ffeql (cdr a) (cdr b)))))))
(define fieql
  (lambda (a b)
    (if (null? a)
	(null? b)
	(if (null? b)
	    #f
	    (if (integer? (car a))
		(if (not (= (car a) (car b)))
		    #f
		    (if (fneq (car a) (car b))
			#f))
		(fieql (cdr a) (cdr b)))))))
(define fveql 
  (lambda (a b i)
    (if (null? b)
	#t
	(if (fneq (car b) (vct-ref a i))
	    #f
	    (fveql a (cdr b) (+ i 1))))))

(define (vequal v0 v1)
  (define (dequal ctr len)
    (if (= ctr len)
	#t
	(and (< (abs (- (vct-ref v0 ctr) (vct-ref v1 ctr))) .001)
	     (dequal (1+ ctr) len))))
  (or (equal? v0 v1)
      (and (vct? v0)
	   (vct? v1)
	   (let ((len (vct-length v0)))
	     (and (= len (vct-length v1))
		  (dequal 0 len))))))

