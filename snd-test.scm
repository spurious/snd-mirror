		      (vector-set! oscs i (make-oscil (+ i 1.0) (cur-phases (+ j 2)))))
		    (let ((gen (make-polyoid 1.0 cur-phases)))
		      (do ((i 0 (+ i 1)))
			  ((= i 88200))
			(outa i (oscil-bank n oscs amps))
			(outb i (polyoid gen 0.0)))))))
	   (snd (find-sound res)))
