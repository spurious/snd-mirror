;;; original setf/setter written by Maciej Stachowiak

(defmacro setf (place value) 
  (if (pair? place) 
      `((snd-setter ,(car place)) ,value ,@(cdr place)) 
      `(set! ,place ,value)))

(define (snd-setter proc) 
  (procedure-property proc 'snd-setter))

